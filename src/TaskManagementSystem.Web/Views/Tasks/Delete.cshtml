@model TaskManagementSystem.Web.Models.TaskItem

@{
    ViewData["Title"] = "Delete Task";
}

<h1 class="h3 mb-3">Delete task</h1>

<div class="alert alert-warning">
    This action cannot be undone. Confirm deletion of task <strong>@Model.Name</strong>.
</div>

<dl class="row">
    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status.ToDisplayName()</dd>
    <dt class="col-sm-2">Assignee</dt>
    <dd class="col-sm-10">@(Model.Assignee ?? "-")</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
</form>
