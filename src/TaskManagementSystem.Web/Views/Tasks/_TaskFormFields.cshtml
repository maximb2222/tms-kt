@model TaskManagementSystem.Web.ViewModels.TaskItemInputModel

<div class="mb-3">
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Description" class="form-label"></label>
    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Assignee" class="form-label"></label>
    <input asp-for="Assignee" class="form-control" />
    <span asp-validation-for="Assignee" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Status" class="form-label"></label>
    <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<TaskManagementSystem.Web.Models.TaskStatus>()"></select>
    <span asp-validation-for="Status" class="text-danger"></span>
</div>
